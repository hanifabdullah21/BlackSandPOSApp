<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".fragment.ItemAddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/iaf_cv_form"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/iaf_edt_code"
                        style="@style/style_form_add_new"
                        android:hint="Kode Item" />

                    <EditText
                        android:id="@+id/iaf_edt_name"
                        style="@style/style_form_add_new"
                        android:hint="Nama Item" />

                    <EditText
                        android:id="@+id/iaf_edt_stock"
                        style="@style/style_form_add_new"
                        android:hint="Stok Minimal"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/iaf_btn_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/background_button"
                        android:text="Tambah Item" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/iaf_iv_logo_menu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@id/iaf_cv_form"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-40dp"
                android:background="@drawable/background_circle_imageview"
                android:padding="12dp"
                android:src="@drawable/ic_add_item_big" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>