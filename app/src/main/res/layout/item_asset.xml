<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ia_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="@dimen/_12sdp"
            tools:text="ID : 9" />

        <!--Nama-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Tanggal beli-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Tanggal beli"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_date_of_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Masa berakhir-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Masa berakhir"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_date_of_expired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Umur-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Harga beli-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Harga beli"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_price_of_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Nilai penyusutan-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Nilai penyusutan"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_depreciation_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <!--Nilai sekarang-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Nilai sekarang"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/ia_tv_present_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>