<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.report.ListReportCashflowActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/lrcfa_tablelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_table">

                <TableRow>

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Tanggal" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pelunasan Piutang" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pelunasan Hutang" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Beban Angkut" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Beban gaji" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Beban Operasional" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Beban Pajak" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Total Operasional" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pembelian Tanah" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pembelian Perlengkapan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pembelian Bangunan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pembelian Kendaraan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pembelian Peralatan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Total Investasi" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Setor Modal" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Pinjam Bank" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Prive" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Total Pendanaan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Kenaikan saldo" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Saldo Kas Awal Bulan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Sldo Kas" />

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Cetak Ulang" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </HorizontalScrollView>

</ScrollView>