<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.report.ListReportBalanceActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/lrba_tablelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_table">

                <TableRow>

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Tanggal" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Kas" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Piutang" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Persediaan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Tanah" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Perlengkapan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="bangunan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Akm. Dep. Bangunan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Kendaraan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Akm. Dep. Kendaraan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Peralatan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Akm. Dep. Peralatan" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Total Aktiva" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Hutang" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Modal" />

                    <TextView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Total Passiva" />

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_table"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="Cetak Ulang" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </HorizontalScrollView>

</ScrollView>