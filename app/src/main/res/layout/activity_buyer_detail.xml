<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.buyer.BuyerDetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Detail "
                android:textSize="@dimen/_16sdp" />

            <!--Name-->
            <LinearLayout style="@style/style_linear_layout_detail">

                <TextView
                    style="@style/style_textview_detail_title_component"
                    android:layout_weight="1.5"
                    android:text="Nama " />

                <TextView
                    android:id="@+id/bda_tv_name"
                    style="@style/style_textview_detail_value_component"
                    tools:text="Kode barangnya berapa yaaa" />

            </LinearLayout>

            <!--Address-->
            <LinearLayout style="@style/style_linear_layout_detail">

                <TextView
                    style="@style/style_textview_detail_title_component"
                    android:layout_weight="1.5"
                    android:text="Alamat " />

                <TextView
                    android:id="@+id/bda_tv_address"
                    style="@style/style_textview_detail_value_component"
                    tools:text="Kode barangnya berapa yaaa" />

            </LinearLayout>

            <!--Telp-->
            <LinearLayout style="@style/style_linear_layout_detail">

                <TextView
                    style="@style/style_textview_detail_title_component"
                    android:layout_weight="1.5"
                    android:text="Telp " />

                <TextView
                    android:id="@+id/bda_tv_telp"
                    style="@style/style_textview_detail_value_component"
                    tools:text="Kode barangnya berapa yaaa" />

            </LinearLayout>

            <!--Email-->
            <LinearLayout style="@style/style_linear_layout_detail">

                <TextView
                    style="@style/style_textview_detail_title_component"
                    android:layout_weight="1.5"
                    android:text="Email " />

                <TextView
                    android:id="@+id/bda_tv_email"
                    style="@style/style_textview_detail_value_component"
                    tools:text="Kode barangnya berapa yaaa" />

            </LinearLayout>

            <!--Salary-->
            <LinearLayout style="@style/style_linear_layout_detail">

                <TextView
                    android:id="@+id/bda_tv_title_salary"
                    style="@style/style_textview_detail_title_component"
                    android:layout_weight="1.5"
                    android:text="Gaji " />

                <TextView
                    android:id="@+id/bda_tv_salary"
                    style="@style/style_textview_detail_value_component"
                    tools:text="Kode barangnya berapa yaaa" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:visibility="gone">

                <Button
                    android:id="@+id/bda_btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="Tambah"
                    android:textSize="@dimen/_10sdp" />

                <Button
                    android:id="@+id/bda_btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="Ubah"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>