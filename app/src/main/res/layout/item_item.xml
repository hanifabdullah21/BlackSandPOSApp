<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_cardview_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/ii_tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_minus5sdp"
            android:background="@drawable/background_button"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Kode : 123456"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/ii_tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="#A12345"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/ii_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ii_tv_code"
            android:layout_toLeftOf="@id/ii_tv_stock"
            android:ellipsize="marquee"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#202020"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:text="MMMMMMMMMMMMMMMMMMMM" />

        <TextView
            android:id="@+id/ii_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ii_tv_name"
            android:textSize="@dimen/_10sdp"
            tools:text="Rp. 100.000.000" />

        <TextView
            android:id="@+id/ii_tv_notif_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ii_tv_price"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="#ff1212"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Stok barang Hampir Habis"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>